<style>
    .backdrop {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: transparent;
        z-index: -1;
    }
</style>

<div ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Journey", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div ng-class="{backdrop: navCollapsed === false}" ng-click="navCollapsed = !navCollapsed"></div>
            <div class="navbar-collapse collapse" uib-collapse="navCollapsed">
                <ul class="nav navbar-nav">
                    <li ng-click="navCollapsed = true">@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown" uib-dropdown on-toggle="toggled(open)">
                            <a href="#" class="dropdown-toggle" id="simple-dropdown" uib-dropdown-toggle>
                                Fordon
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" uib-dropdown-menu role="menu" aria-labelledby="simple-dropdown">
                                <li><a href="#!/vehicles" ng-click="navCollapsed = true">Alla</a></li>
                                <li><a href="#!/vehicles/register" ng-click="navCollapsed = true">Nytt</a></li>
                            </ul>
                        </li>

                    <li class="dropdown" uib-dropdown on-toggle="toggled(open)">
                        <a href="#" class="dropdown-toggle" id="trips-dropdown" uib-dropdown-toggle>
                            Resor
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" uib-dropdown-menu role="menu" aria-labelledby="trips-dropdown">
                            <li><a href="#!/trips" ng-click="navCollapsed = true">Start</a></li>
                            <li><a href="#!/trips/pdfreport" ng-click="navCollapsed = true">PDF-rapport</a></li>
                            <li><a href="#!/trips/report" ng-click="navCollapsed = true">Rapport</a></li>
                        </ul>
                    </li>
                    <li><a href="#!/chat" ng-click="navCollapsed = true">Hjälp <span class="glyphicon glyphicon-comment"></span></a></li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container">
        <div ng-view>

        </div>
    </div>
</div>


<script src="~/dist/vendor.js"></script>

<script src="~/signalr/hubs"></script>


